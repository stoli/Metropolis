<window id="2004">
	<defaultcontrol>-</defaultcontrol>
	<animation type="WindowOpen">
		<effect type="fade" start="0" end="100" time="200" delay="500" />
	</animation>
	<animation type="WindowClose">
		<effect type="fade" start="100" end="0" time="200" />
	</animation>
	<controls>
		<!-- Default Home Screen Only -->
		<control type="group">
			<visible>Window.IsActive(home) + !Skin.HasSetting(home2)</visible>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<control type="image">
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<texture>frames/ClassicFrame_Background.png</texture>
				<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
			</control>
			<control type="videowindow" id="1">
				<description>Video Preview</description>
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
			</control>
			<control type="image">
				<posx>215</posx>
				<posy>25</posy>
				<width>848</width>
				<height>507</height>
				<texture>frames/ClassicFrame_Fanart.png</texture>
			</control>
			<control type="grouplist">
				<posx>260</posx>
				<posy>461</posy>
				<width>760</width>
				<height>30</height>
				<itemgap>10</itemgap>
				<align>left</align>
				<orientation>horizontal</orientation>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>30</height>
					<aligny>center</aligny>
					<width min="10" max="760">auto</width>
					<font>METF_DialogLargeBold</font>
					<label>$INFO[VideoPlayer.TVShowTitle]</label>
					<textcolor>NowPlayingTitle</textcolor>
					<shadowcolor>Black</shadowcolor>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>30</height>
					<aligny>center</aligny>
					<width min="10" max="760">auto</width>
					<font>METF_DialogLargeBold</font>
					<label>$INFO[VideoPlayer.Season]$INFO[VideoPlayer.Episode, x ]</label>
					<textcolor>NowPlayingDetails</textcolor>
					<shadowcolor>Black</shadowcolor>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>30</height>
					<aligny>center</aligny>
					<width min="10" max="760">auto</width>
					<scrollout>false</scrollout>
					<pauseatend>1800</pauseatend>
					<scrollspeed>40</scrollspeed>
					<scroll>true</scroll>
					<font>METF_DialogLargeBold</font>
					<label>$INFO[VideoPlayer.Title]</label>
					<textcolor>NowPlayingTitle</textcolor>
					<shadowcolor>Black</shadowcolor>
				</control>
			</control>
		</control>
		<!-- Screens other than Default Home Screen - TEXT ONLY -->
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,0" end="0,100" delay="500" time="300" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="slide" start="0,100" end="0,0" time="300" />
			</animation>
			<posx>390</posx>
			<posy>-105</posy>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<visible>![Window.IsActive(home) + !Skin.HasSetting(home2)]</visible>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>-10</posy>
				<width>500</width>
				<height>75</height>
				<texture>dialogs/DialogBG_Dropdown2.png</texture>
				<colordiffuse>DialogDropdownColor</colordiffuse>
			</control>
			<control type="label">
				<posx>30</posx>
				<posy>9</posy>
				<width>460</width>
				<font>METF_DialogSmallBold</font>
				<label>13350</label>
				<textcolor>NowPlayingDetails2</textcolor>
			</control>
			<control type="grouplist">
				<posx>30</posx>
				<posy>28</posy>
				<width>440</width>
				<height>25</height>
				<itemgap>10</itemgap>
				<align>left</align>
				<orientation>horizontal</orientation>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>25</height>
					<aligny>center</aligny>
					<width min="10" max="440">auto</width>
					<font>METF_DialogSmallBold</font>
					<label>$INFO[VideoPlayer.TVShowTitle]</label>
					<textcolor>NowPlayingTitle2</textcolor>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>25</height>
					<aligny>center</aligny>
					<width min="10" max="440">auto</width>
					<font>METF_DialogSmallBold</font>
					<label>$INFO[VideoPlayer.Season]$INFO[VideoPlayer.Episode, x ]</label>
					<textcolor>NowPlayingDetails2</textcolor>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>25</height>
					<aligny>center</aligny>
					<width min="10" max="440">auto</width>
					<scrollout>false</scrollout>
					<pauseatend>1800</pauseatend>
					<scrollspeed>40</scrollspeed>
					<scroll>true</scroll>
					<font>METF_DialogSmallBold</font>
					<label>$INFO[VideoPlayer.Title]</label>
					<textcolor>NowPlayingTitle2</textcolor>
				</control>
			</control>
			
		</control>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
		<include condition="Skin.HasSetting(DebugMode)">Debug</include>
	</controls>
</window>
