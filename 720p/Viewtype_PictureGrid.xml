<includes>
	<include name="Viewtype_PictureGrid">
		<control type="group">
			<visible>Control.IsVisible(500)</visible>
			<!-- Browser -->
			<control type="panel" id="500">
				<viewtype label="31293">icon</viewtype>
				<posx>740</posx>
				<posy>50</posy>
				<width>496</width>
				<height>480</height>
				<onup>500</onup>
				<ondown>500</ondown>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<orientation>vertical</orientation>
				<preloaditems>2</preloaditems>
				<scrolltime>200</scrolltime>
				<pagecontrol>61</pagecontrol>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewPictureGrid)</visible>
				<itemlayout width="162" height="160">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>156</width>
						<height>156</height>
						<texture>list/listframe.png</texture>
					</control>
					<control type="image">
						<posx>18</posx>
						<posy>18</posy>
						<width>120</width>
						<height>120</height>
						<texture background="true" fallback="DefaultThumb.png" diffuse="list/listmatte.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout width="162" height="160">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>156</width>
						<height>156</height>
						<texture>list/listframe.png</texture>
						<animation reversible="false" effect="zoom" center="auto" start="100" end="130" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="auto" start="130" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
					</control>
					<control type="image">
						<posx>18</posx>
						<posy>18</posy>
						<width>120</width>
						<height>120</height>
						<texture background="true" fallback="DefaultThumb.png" diffuse="list/listmatte.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<animation reversible="false" effect="zoom" center="auto" start="100" end="130" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="auto" start="130" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
					</control>
				</focusedlayout>
			</control>
			<!-- Viewer -->
			<control type="group">
				<posx>0</posx>
				<posy>0</posy>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<!-- Picture (3:2 aspect viewing window) -->
				<control type="image">
					<posx>92</posx>
					<posy>116</posy>
					<width>546</width>
					<height>364</height>
					<texture background="true">black.png</texture>
					<aspectratio>stretch</aspectratio>
					<fadetime>300</fadetime>
				</control>
				<control type="image">
					<posx>92</posx>
					<posy>116</posy>
					<width>546</width>
					<height>364</height>
					<texture background="true">$INFO[ListItem.FilenameAndPath]</texture>
					<aspectratio>keep</aspectratio>
					<fadetime>300</fadetime>
				</control>
				<!-- Frame -->
				<control type="image">
					<posx>72</posx>
					<posy>94</posy>
					<width>582</width>
					<height>415</height>
					<texture>frames/ClassicFrame_Fanart.png</texture>
					<aspectratio>stretch</aspectratio>
					<fadetime>300</fadetime>
				</control>
			</control>
			<!-- Picture Info -->
			<control type="group">
				<posx>0</posx>
				<posy>0</posy>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<!-- Title -->
				<control type="label">
					<posx>42</posx>
					<posy>70</posy>
					<width>648</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_TitleTextLarge</font>
					<textcolor>TitleText</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="grouplist">
					<posx>42</posx>
					<posy>500</posy>
					<width>648</width>
					<height>30</height>
					<align>center</align>
					<orientation>horizontal</orientation>
					<!-- Picture Date and Time -->
					<control type="label">
						<width min="25" max="661">auto</width>
						<height>20</height>
						<font>METF_MediaDetailsSmall</font>
						<textcolor>MediaDetailsGenre</textcolor>
						<label>$INFO[ListItem.PictureDateTime]</label>
					</control>
					<!-- Bullet -->
					<control type="image">
						<width>8</width>
						<height>28</height>
						<texture>Dot.png</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<colordiffuse>BulletDiffuse</colordiffuse>
						<visible>!IsEmpty(ListItem.PictureDateTime) + [!IsEmpty(ListItem.PictureResolution) + !StringCompare(ListItem.PictureResolution, 0 x 0)]</visible>
					</control>
					<!-- Picture Resolution -->
					<control type="label">
						<width min="25" max="661">auto</width>
						<height>20</height>
						<font>METF_MediaDetailsSmall</font>
						<textcolor>MediaDetailsInfo</textcolor>
						<label>$INFO[ListItem.PictureResolution]</label>
						<visible>!IsEmpty(ListItem.PictureResolution) + !StringCompare(ListItem.PictureResolution, 0 x 0)</visible>
					</control>
				</control>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
