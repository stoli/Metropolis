<includes>
	<include name="Viewtype_BannerPoster">
		<control type="group">
			<visible>Control.IsVisible(510)</visible>
			<!-- Browser -->
			<control type="panel" id="510">
				<viewtype label="$LOCALIZE[31439]">bigwide</viewtype>
				<posx>400</posx>
				<posy>50</posy>
				<height>450</height>
				<width>840</width>
				<onup>510</onup>
				<ondown>510</ondown>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<orientation>vertical</orientation>
				<preloaditems>2</preloaditems>
				<scrolltime>200</scrolltime>
				<pagecontrol>61</pagecontrol>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewBannerPoster)</visible>
				<visible>Window.IsActive(videolibrary) + Container.Content(tvshows)</visible>
				<itemlayout width="420" height="90">
					<control type="image">
						<posx>12</posx>
						<posy>15</posy>
						<width>375</width>
						<height>70</height>
						<texture>frames/banner_diffuse.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>15</posy>
						<width>375</width>
						<height>70</height>
						<texture background="true" diffuse="frames/banner_diffuse.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="true">keep</aspectratio>
						<visible>IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>15</posy>
						<width>375</width>
						<height>70</height>
						<texture background="true" fallback="default_banner.png" diffuse="frames/banner_diffuse.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="true">stretch</aspectratio>
						<visible>!IsEmpty(ListItem.Title) + !Skin.HasSetting(banner_jpg)</visible>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>15</posy>
						<width>375</width>
						<height>70</height>
						<texture background="true" fallback="default_banner.png" diffuse="frames/banner_diffuse.png">$INFO[ListItem.Path]banner.jpg</texture>
						<aspectratio scalediffuse="true">stretch</aspectratio>
						<visible>!IsEmpty(ListItem.Title) + Skin.HasSetting(banner_jpg)</visible>
					</control>
					<control type="image">
						<posx>4</posx>
						<posy>7</posy>
						<width>390</width>
						<height>86</height>
						<texture>frames/banner_frame2.png</texture>
						<aspectratio scalediffuse="true">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>354</posx>
						<posy>52</posy>
						<width>28</width>
						<height>28</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>!Skin.HasSetting(HideTVWatchedOverlays)</visible>
					</control>
				</itemlayout>
				<focusedlayout width="420" height="90">
					<control type="image">
						<posx>12</posx>
						<posy>15</posy>
						<width>375</width>
						<height>70</height>
						<texture>frames/banner_diffuse.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<animation reversible="false" effect="zoom" center="auto" start="100" end="115" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="auto" start="115" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>15</posy>
						<width>375</width>
						<height>70</height>
						<texture background="true" diffuse="frames/banner_diffuse.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="true">keep</aspectratio>
						<animation reversible="false" effect="zoom" center="auto" start="100" end="115" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="auto" start="115" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
						<visible>IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>15</posy>
						<width>375</width>
						<height>70</height>
						<texture background="true" fallback="default_banner.png" diffuse="frames/banner_diffuse.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="true">stretch</aspectratio>
						<animation reversible="false" effect="zoom" center="auto" start="100" end="115" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="auto" start="115" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
						<visible>!IsEmpty(ListItem.Title) + !Skin.HasSetting(banner_jpg)</visible>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>15</posy>
						<width>375</width>
						<height>70</height>
						<texture background="true" fallback="default_banner.png" diffuse="frames/banner_diffuse.png">$INFO[ListItem.Path]banner.jpg</texture>
						<aspectratio scalediffuse="true">stretch</aspectratio>
						<animation reversible="false" effect="zoom" center="auto" start="100" end="115" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="auto" start="115" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
						<visible>!IsEmpty(ListItem.Title) + Skin.HasSetting(banner_jpg)</visible>
					</control>
					<control type="image">
						<posx>4</posx>
						<posy>7</posy>
						<width>390</width>
						<height>86</height>
						<texture>frames/banner_frame2.png</texture>
						<aspectratio scalediffuse="true">stretch</aspectratio>
						<animation reversible="false" effect="zoom" center="auto" start="100" end="115" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="auto" start="115" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
					</control>
					<control type="image">
						<posx>354</posx>
						<posy>52</posy>
						<width>28</width>
						<height>28</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<animation reversible="false" effect="zoom" center="195,43" start="100" end="115" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="195,43" start="115" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
						<visible>!Skin.HasSetting(HideTVWatchedOverlays)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<posx>0</posx>
				<posy>-21</posy>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(videolibrary) + Container.Content(tvshows)</visible>
				<!-- TV Poster Image  -->
				<control type="image">
					<posx>37</posx>
					<posy>81</posy>
					<width>300</width>
					<height>440</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<fadetime>200</fadetime>
				</control>
				<control type="image">
					<posx>20</posx>
					<posy>56</posy>
					<width>335</width>
					<height>490</height>
					<texture>frames/ClassicFrame_PosterMedium.png</texture>
					<fadetime>200</fadetime>
					<visible>!IsEmpty(ListItem.Title)</visible>
				</control>
				<!-- Title -->
				<control type="label">
					<posx>400</posx>
					<posy>529</posy>
					<width>840</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_TitleTextLarge</font>
					<textcolor>TitleText</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</control>
			<control type="grouplist">
				<posx>43</posx>
				<posy>510</posy>
				<width>290</width>
				<height>30</height>
				<align>center</align>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(videolibrary) + Container.Content(tvshows)</visible>
				<!-- Year -->
				<control type="label">
					<width min="25" max="600">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsYear</textcolor>
					<label>$INFO[ListItem.Year]</label>
					<visible>!IsEmpty(ListItem.Year)</visible>
				</control>
				<!-- Bullet -->
				<control type="image">
					<width>8</width>
					<height>36</height>
					<texture>Dot.png</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>BulletDiffuse</colordiffuse>
					<visible>![IsEmpty(ListItem.Year) | IsEmpty(ListItem.Episode)]</visible>
				</control>
				<!-- Episode Count -->
				<control type="label">
					<width min="25" max="600">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsEpisodes</textcolor>
					<label>$INFO[ListItem.Episode] $LOCALIZE[20360]</label>
					<visible>!IsEmpty(ListItem.Episode) + [Container.Content(seasons) | Container.Content(tvshows)]</visible>
				</control>
			</control>
			
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
