<window id="603">
	<defaultcontrol>29</defaultcontrol>
	<controls>
 		<!-- Background Image (Global_Background include can't be used. 
         Actually, in PVR Settings the skin variables aren't set when this dialog box is called... -->
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<texture>background.png</texture>
		</control>
    
		<control type="grouplist" id="5">
			<description>control area</description>
			<posx>400</posx>
			<posy>90</posy>
			<width>740</width>
			<height>440</height>
			<itemgap>-1</itemgap>
			<onup>9001</onup>
			<ondown>9001</ondown>
			<onleft>9001</onleft>
			<onright>9001</onright>
		</control>
		<control type="button" id="7">
			<description>Default Button</description>
			<height>40</height>
			<include>SettingsLabel</include>
		</control>
		<control type="radiobutton" id="8">
			<description>Default RadioButton</description>
			<height>40</height>
			<include>SettingsLabel</include>
		</control>
		<control type="spincontrolex" id="9">
			<description>Default spincontrolex</description>
			<height>40</height>
			<aligny>center</aligny>
			<reverse>yes</reverse>
			<include>SettingsLabel</include>
		</control>
		<control type="sliderex" id="10">
			<description>Default Slider</description>
			<height>40</height>
			<include>SettingsLabel</include>
		</control>
		<control type="edit" id="12">
			<description>Default Edit</description>
			<height>40</height>
			<include>SettingsLabel</include>
		</control>
    
    <!-- Menu group -->
		<control type="grouplist" id="9001">
			<posx>-80</posx>
			<posy>200</posy>
			<itemgap>20</itemgap>
			<orientation>vertical</orientation>
			<onleft>5</onleft>
			<onright>5</onright>
			<control type="button" id="28">
				<description>OK button</description>
			  <include>SettingsLabelLeft</include>
				<label>$LOCALIZE[186]</label>
			</control>
			<control type="button" id="29">
			  <description>Cancel button</description>
			  <include>SettingsLabelLeft</include>
				<label>$LOCALIZE[222]</label>
			</control>
		</control>
    
    <!-- Header group --> 
		<control type="group">
			<posx>30</posx>
			<posy>10</posy>
			<include>Animation_SlideDownFadeOut</include>
			<control type="label">
				<label>$LOCALIZE[5]</label>
				<include>Global_HeadingSectionVars</include>
			</control>
			<control type="label" id="2">
				<include>Global_HeadingDetailVars</include>
			</control>
		</control>

		<!-- Time, weather and debug options -->
 		<include>Global_Time</include>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
		<include condition="Skin.HasSetting(DebugMode)">Debug</include>    
	</controls>
</window>