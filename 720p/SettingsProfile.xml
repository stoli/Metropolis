<window id="34">
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>Global_Background</include>
		<control type="group">
			<posy>-60</posy>
			<include>Animation_OpenCloseFade</include>
			<animation type="Conditional" condition="Window.IsActive(contextmenu) | Window.IsActive(profilesettings) | Window.IsActive(yesnodialog)">
				<effect type="zoom" time="600" center="640,360" start="100" end="50" tween="cubic" easing="inout" />
				<effect type="fade" time="400" start="100" end="0" />
			</animation>
			<!-- Login Screen Toggle on Left -->
			<control type="image">
				<posx>0</posx>
				<posy>234</posy>
				<width>380</width>
				<height>38</height>
				<texture>ButtonFo.png</texture>
				<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(4)">Conditional</animation>
			</control>
			<control type="radiobutton" id="4">
				<posx>16</posx>
				<posy>234</posy>
				<onright>2</onright>
				<textoffsetx>90</textoffsetx>
				<height>38</height>
				<width>380</width>
				<align>right</align>
				<aligny>center</aligny>
				<radiowidth>80</radiowidth>
				<radioheight>55</radioheight>
				<textureradiofocus>button_radioF.png</textureradiofocus>
				<textureradionofocus>button_radioNF.png</textureradionofocus>
				<font>METF_ContextValue</font>
				<textcolor>ButtonText</textcolor>
				<disabledcolor>TextDisabled</disabledcolor>
				<focusedcolor>ButtonText</focusedcolor>
				<texturefocus>-</texturefocus>
				<selectedcolor>TextFO</selectedcolor>
				<texturenofocus>-</texturenofocus>
				<pulseonselect>false</pulseonselect>
				<label>$LOCALIZE[20096]</label>
			</control>
			<!--
			<control type="image">
				<posx>440</posx>
				<posy>158</posy>
				<width>840</width>
				<height>38</height>
				<texture>ButtonFo.png</texture>
				<animation effect="fade" start="100" end="70" condition="True">Conditional</animation>
			</control>
			-->
			<control type="label">
				<description>Heading</description>
				<posx>460</posx>
				<posy>138</posy>
				<width>800</width>
				<height>38</height>
				<font>METF_TitleTextLarge</font>
				<textcolor>SettingsTitle</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>20115</label>
			</control>
			<control type="list" id="2">
				<posx>450</posx>
				<posy>206</posy>
				<width>840</width>
				<height>390</height>
				<onleft>4</onleft>
				<onright>4</onright>
				<onup>52</onup>
				<ondown>52</ondown>
				<itemlayout height="38" width="810">
					<control type="label">
						<posx>10</posx>
						<width>810</width>
						<height>38</height>
						<textcolor>SettingsDetail</textcolor>
						<font>METF_ContextValue</font>
						<align>left</align>
						<aligny>center</aligny>
						<focusedcolor>ButtonText</focusedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="200" width="810">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>200</width>
						<height>200</height>
						<fadetime>100</fadetime>
						<aspectratio align="center" aligny="center">scale</aspectratio>
						<texture fallback="settings/settings_profiles.png">$INFO[ListItem.Icon]</texture>
						<bordertexture border="8">border.png</bordertexture>
						<bordersize>4</bordersize>
					</control>
					<control type="image">
						<posx>225</posx>
						<posy>60</posy>
						<width>625</width>
						<height>38</height>
						<align>left</align>
						<aligny>center</aligny>
						<texture>ButtonFo.png</texture>
						<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(2)">Conditional</animation>
						<animation effect="slide" end="0,20" condition="IsEmpty(ListItem.Label2)">Conditional</animation>
					</control>
					<control type="label">
						<posx>245</posx>
						<posy>60</posy>
						<width>565</width>
						<height>38</height>
						<textcolor>ButtonText</textcolor>
						<font>METF_ContextValue</font>
						<align>left</align>
						<aligny>center</aligny>
						<focusedcolor>ButtonText</focusedcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="slide" end="0,20" condition="IsEmpty(ListItem.Label2)">Conditional</animation>
					</control>
					<control type="label">
						<posx>245</posx>
						<posy>112</posy>
						<width>565</width>
						<height>38</height>
						<textcolor>SettingsDetail</textcolor>
						<font>METF_ContextValue</font>
						<align>left</align>
						<focusedcolor>ButtonText</focusedcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
			</control>
		</control>
		<include>Global_ContextFilter</include>
		<include>Global_Time</include>
		<include>Setting_Heading</include>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
		<include condition="Skin.HasSetting(DebugMode)">Debug</include>
	</controls>
</window>
